(*Вимикання стейт-машини*)
if NOT Amr_6_ OR Alarm_6_  OR NOT Dio_6_ then 
	State_6_:=ST_OFF;
end_if;


(*Вмикання стейт-машини*)
(*if redge(Amr_6_,re_Amr) then 
	State_6_:=ST_START;
end_if;*)

IF State_6_>ST_START then (*Рахуємо час роботи фільтра*)
